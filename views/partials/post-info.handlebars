<article class="post">
    <div class="post-head">
        <div class="title">
            <a class="movie" href="/post/{{id}}">{{title}}</a>
        </div>
        
        <div class="meta">
            Posted By {{user.username}} on {{format_date created_at}} 
        </div>
    </div>
    <div class="post-review">
        {{review_text}}
    </div>
</article>



